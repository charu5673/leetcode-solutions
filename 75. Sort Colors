class Solution {
    public void sortColors(int[] nums) {
        int r = 0, w = 0, b = 0;
        for(int i = 0; i < nums.length; i++) {
            switch(nums[i]) {
                case 0: r++; break;
                case 1: w++; break;
                default: b++;
            }
        }
        for(int i = 0; i < nums.length; i++) {
            if(r > 0) {
                nums[i] = 0;
                r--;
            } else if(w > 0) {
                nums[i] = 1;
                w--;
            } else nums[i] = 2;
        }
    }
}
