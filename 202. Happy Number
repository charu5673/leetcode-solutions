class Solution {
    public boolean isHappy(int n) {
        LinkedList<Integer> v = new LinkedList<Integer>();
        while(true) {
            int d = n;
            int s = 0;
            while(d > 0) {
                s += (d % 10) * (d % 10);
                d /= 10;
            }
            if(s == 1) return true;
            if(v.contains(s)) return false;
            v.add(s);
            n = s;
        }
    }
}
