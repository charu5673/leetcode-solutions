/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean isSameTree(TreeNode p, TreeNode q) {
        boolean ans = true;
        if(p == null && q == null) return true;
        else if(p == null || q == null) return false;
        if(p.left != null && q.left != null) ans = ans && isSameTree(p.left, q.left);
        else if(!(p.left == null && q.left == null)) {
            return false;
        }
        if(!ans) return false;
        if(p.right != null && q.right != null) ans = ans && isSameTree(p.right, q.right);
        else if(!(p.right == null && q.right == null)) {
            return false;
        }
        if(!ans) return false;
        if(p.val == q.val) return ans;
        return false;
    }
}
