class Solution {
    public boolean isVowel(char c) {
        return (c == 'a' || c== 'i' || c == 'o' || c == 'e' || c == 'u' || c == 'A' || c== 'I' || c == 'O' || c == 'E' || c == 'U');
    }
    public String reverseVowels(String s) {
        int i = 0, j = s.length() - 1;
        char[] c = s.toCharArray();
        boolean iv = (isVowel(c[i])), jv = (isVowel(c[j]));
        while(i < j) {
            if(iv && jv) {
                char t = c[i];
                c[i] = c[j];
                c[j] = t;
                j--;
                i++;
                if(j >= 0) jv = (isVowel(c[j]));
                if(i < c.length - 1) iv = (isVowel(c[i]));
            } else if(iv) {
                j--;
                if(j >= 0) jv = (isVowel(c[j]));
            } else if(jv) {
                i++;
                if(i < c.length - 1) iv = (isVowel(c[i]));
            } else {
                i++;
                j--;
                if(j >= 0) jv = (isVowel(c[j]));
                if(i < c.length - 1) iv = (isVowel(c[i]));
            }
        }
        return new String(c);
    }
}
