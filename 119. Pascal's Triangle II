class Solution {
    public List<Integer> getRow(int rowIndex) {
        List<Integer> first = new LinkedList<>();
        first.add(1);
        if(rowIndex == 0) return first;
        List<Integer> last = new LinkedList<>();
        last.add(1);
        last.add(1);
        if(rowIndex == 1) return last;
        for(int i = 2; i <= rowIndex; i++) {
            List<Integer> next = new LinkedList<>();
            next.add(1);
            for(int j = 1; j < i; j++) {
                next.add(last.get(j - 1) + last.get(j));
            }
            next.add(1);
            if(i == rowIndex) return next;
            last = next;
        }
        return first;
    }
}
